<Window x:Class="Lanceur_modder.Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lanceur_modder"
        mc:Ignorable="d"
        Title="Paramètres" Height="170" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox Header="RAM alloué à Minecraft" Height="84" Margin="10,10,10,0" VerticalAlignment="Top">
            <Grid>
                <Slider x:Name="SL_RAM" Margin="10,10,10,0" VerticalAlignment="Top" Interval="1" Minimum="1" TickPlacement="BottomRight" ValueChanged="SL_RAM_ValueChanged" IsMoveToPointEnabled="True" IsSnapToTickEnabled="True" TickFrequency="0.5"/>
                <Label x:Name="L_RAM" Content="1" Margin="10,33,10,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <Button x:Name="BT_OK" Content="OK" HorizontalAlignment="Left" Margin="10,99,0,10" Width="472" Click="BT_OK_Click"/>

    </Grid>
</Window>
